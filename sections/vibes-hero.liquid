<div class="container-hero">
    <h1 class="splt">2KVibes</h1>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {

    
        anime({
            begin: splt({}),
            targets: '.char',
            opacity: [0,1],
            scale: [1, 1.5],
            delay: anime.stagger(50),
            easing: 'cubicBezier(.71,-0.77,.43,1.67)',
            complete: () => {
                splt.revert();
            },
        });
    })

</script>


